{
	"name": "@substrate/asset-transfer-api",
	"version": "0.7.2",
	"description": "The Asset Transfer API is a library designed to streamline asset transfers for Polkadot SDK-based chains, offering methods for both cross-chain and local transactions.",
	"main": "./dist/commonjs/index.js",
	"module": "./dist/esm/index.js",
	"type": "module",
	"types": "./dist/commonjs/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/commonjs/index.d.ts",
				"default": "./dist/commonjs/index.js"
			}
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tshy",
		"clean": "rimraf dist .tshy .tshy-build",
		"start": "node ./lib/index.js",
		"lint": "substrate-dev-run-lint",
		"lint:fix": "substrate-dev-run-lint --fix",
		"docs": "typedoc",
		"deploy": "yarn build && npm publish",
		"test:e2e": "vitest --project e2e",
		"test:integration": "vitest --project integration",
		"test:unit": "vitest --project unit",
		"test": "vitest"
	},
	"tshy": {
		"project": "./tsconfig.json",
		"exports": {
			"./package.json": "./package.json",
			".": "./src/index.ts"
		},
		"exclude": [
			"./src/**/*.spec.ts",
			"./src/testHelpers"
		]
	},
	"engines": {
		"node": ">=18.14"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/paritytech/asset-transfer-api.git"
	},
	"keywords": [],
	"author": "",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/paritytech/asset-transfer-api/issues"
	},
	"homepage": "https://github.com/paritytech/asset-transfer-api#readme",
	"packageManager": "yarn@4.5.0",
	"devDependencies": {
		"@acala-network/chopsticks-core": "^1.0.5",
		"@acala-network/chopsticks-testing": "^1.0.5",
		"@substrate/dev": "^0.9.0",
		"@types/cli-progress": "^3.11.6",
		"ansi-colors": "^4.1.3",
		"chalk": "5.4.1",
		"cli-progress": "^3.12.0",
		"reflect-metadata": "^0.2.2",
		"rimraf": "^6.0.1",
		"tshy": "^3.0.2",
		"tsx": "^4.19.4",
		"typedoc": "^0.28.4",
		"typedoc-plugin-missing-exports": "^4.0.0",
		"typedoc-theme-hierarchy": "^6.0.0",
		"vitest": "^3.1.3"
	},
	"dependencies": {
		"@polkadot/api": "^16.0.1",
		"@polkadot/api-augment": "^16.0.1",
		"@polkadot/types": "^16.0.1",
		"@polkadot/types-codec": "^16.0.1",
		"@polkadot/util": "^13.4.4",
		"@polkadot/util-crypto": "^13.4.4",
		"@substrate/asset-transfer-api-registry": "^0.3.0"
	},
	"resolutions": {
		"@polkadot/api": "^15.9.2",
		"@polkadot/types-create": "15.9.2",
		"@polkadot/rpc-provider": "15.9.2",
		"@polkadot/api-augment": "^15.9.2",
		"@polkadot/types": "^15.9.2",
		"@polkadot/types-codec": "16.1.1",
		"@polkadot/util-crypto": "13.5.1",
		"@polkadot/util": "13.5.1",
		"@polkadot/keyring": "13.4.4"
	}
}
