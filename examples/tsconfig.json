{
    "extends": "@substrate/dev/config/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build",
        "suppressImplicitAnyIndexErrors": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "ignoreDeprecations": "5.0",
    },
    "typeRoots": [
        "../node_modules/@types"
      ],
      "exclude": [
        "node_modules"
      ],
      "include": [
        "./*",
        "./rococo/**/*.ts",
        "./kusama/**/*.ts",
        "./polkadot/**/*.ts",
        "../src/**/*.ts",
        "../src/**/*.json",
      ]
}
